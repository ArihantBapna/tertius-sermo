<script>
    function deleteButton(){
        return{
            redDelete: {
                text: 'Delete',
                icon: 'fa-trash',
                event: function(){
                    var selected = $selectedTable.bootstrapTable('getSelections');
                    var toDel = selected.map(a => a.ID);
                    $selectedTable.bootstrapTable('remove',{field: 'ID', values: toDel});
                    var remaining = parseInt(document.getElementById('totalSavedNum').text) - toDel.length;
                    document.getElementById('totalSavedNum').text = remaining;
                    if(remaining === 0){
                        $('#mainRange').show();
                    }
                },
                attributes: {
                    style: "background-color: #dc3545 !important; border-color: #dc3545 !important"
                }
            }
        }
    }
</script>

<script>
    var $selectedTable = $('#selectedTable');
    $selectedTable.bootstrapTable();
</script>
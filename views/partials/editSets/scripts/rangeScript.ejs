<script>
    function updateTextInput(val,id) {
        var text = document.querySelector('[data='+id+']').innerHTML;
        var colonIndex = text.indexOf(":")+1;
        text = text.substring(0,colonIndex);
        document.querySelector('[data='+id+']').innerHTML = text+" " +val;
        setNewTotal();
    }
    function calculateTotal(){
        var total = 0;
        total = total + parseFloat(document.getElementById('cat14').value);
        total = total + parseFloat(document.getElementById('cat15').value);
        total = total + parseFloat(document.getElementById('cat16').value);
        total = total + parseFloat(document.getElementById('cat17').value);
        total = total + parseFloat(document.getElementById('cat18').value);
        total = total + parseFloat(document.getElementById('cat19').value);
        total = total + parseFloat(document.getElementById('cat20').value);
        total = total + parseFloat(document.getElementById('cat21').value);
        total = total + parseFloat(document.getElementById('cat22').value);
        total = total + parseFloat(document.getElementById('cat25').value);
        total = total + parseFloat(document.getElementById('cat26').value);
        return total;
    }
    function setNewTotal(){
        var total = calculateTotal();
        document.getElementById('totalHolder').innerHTML = 'Total: ' +total.toFixed(2);

        if(total === 1){
            document.getElementById('totalHolder').classList.add('alert-success');
            document.getElementById('totalHolder').classList.remove('alert-danger');
        }else{
            document.getElementById('totalHolder').classList.remove('alert-success');
            document.getElementById('totalHolder').classList.add('alert-danger');
        }

    }
</script>